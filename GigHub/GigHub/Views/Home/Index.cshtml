@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var gig in Model)
    {
    <li>
        <div class="date">
            <div class="month">
                @gig.DateTime.ToString("MMM")
            </div>
            <div class="day">
                @gig.DateTime.ToString("d ")
            </div>
        </div>
        <div class="details">
            <span class="artist">
                @gig.Artist.Name

            </span>

            <span class="genre">
                @gig.Genre.Name &nbsp;
            </span>
            
            <div class="btn-group">
                <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-left js-toggle-attendance">Going?</button>
                <button data-artist-id="@gig.ArtistId" class="btn btn-default btn-sm pull-right js-toggle-follow">Follow Artist</button>
            </div>
        </div>
    </li>
    }
</ul>
@section scripts{
   <script>
       $(document).ready(function () {
           $(".js-toggle-attendance").click(function (e) {
               var button = $(e.target)
               $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                .done(function () {
                    button
                        .removeClass("btn.default")
                        .addClass("btn-info")
                        .text("Going");
                   })
                   .fail(function () {
                       alert("Something failed!");
                   })
           });
       });
  
       $(document).ready(function () {
           $(".js-toggle-follow").click(function (e) {
               var button = $(e.target)
               $.post("/api/follows", { artistId: button.attr("data-artist-id") })
                   .done(function () {
                       button
                           .removeClass("btn.default")
                           .addClass("btn-info")
                           .text("Following");
                   })
                   .fail(function () {
                       alert("Something failed!");
                   })
           });
       });
    </script>
    }